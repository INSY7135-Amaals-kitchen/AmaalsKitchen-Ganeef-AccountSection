@model AmaalsKitchen.ViewModels.ProductFormViewModel

@{
    ViewData["Title"] = "Manage Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="container mt-4">
    <h2>Manage Products</h2>

    <!-- Add Product Form -->
    <div class="card mb-4">
        <div class="card-header" style="background-color:#C41E3A; color:white;">
            <h4>Add New Product</h4>
        </div>
        <div class="card-body">
            <form id="addProductForm" asp-action="AddProducts" asp-controller="Admins" method="post">
                @Html.AntiForgeryToken()
                <div class="row">
                    <div class="col-md-6">
                        <label asp-for="Product.Name">Name</label>
                        <input asp-for="Product.Name" class="form-control" placeholder="Enter product name" required />
                        <span asp-validation-for="Product.Name" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Product.Price">Price</label>
                        <input asp-for="Product.Price" class="form-control" type="number" step="0.01" placeholder="e.g. 29.99" required />
                        <span asp-validation-for="Product.Price" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Product.Category">Category</label>
                        <select asp-for="Product.Category" class="form-control" required>
                            <option value="Rolls">Rolls</option>
                            <option value="Burgers">Burgers</option>
                            <option value="Drinks">Drinks</option>
                        </select>
                        <span asp-validation-for="Product.Category" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Product.ImageUrl">Image URL</label>
                        <input asp-for="Product.ImageUrl" class="form-control" placeholder="e.g. https://example.com/image.jpg" />
                    </div>
                    <div class="col-12">
                        <label asp-for="Product.Description">Description</label>
                        <textarea asp-for="Product.Description" class="form-control" placeholder="Enter description" rows="4"></textarea>
                    </div>
                    <div class="col-12 mt-3">
                        <button id="saveProductButton" type="submit" class="btn btn-success">Save Product</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Product List -->
    <div class="card">
        <div class="card-header" style="background-color:#C41E3A; color:white;">
            <h4>Current Menu</h4>
        </div>
        <div class="card-body">
            <p>Last updated: @DateTime.Now</p>
            @if (Model.Products.Any())
            {
                <table class="table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Price</th>
                            <th>Category</th>
                            <th>Description</th>
                            <th>Image</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var product in Model.Products)
                        {
                            <tr>
                                <td>@product.Name</td>
                                <td>@product.Price.ToString("C")</td>
                                <td>@product.Category</td>
                                <td>@product.Description</td>
                                <td>
                                    @if (!string.IsNullOrEmpty(product.ImageUrl))
                                    {
                                        <img src="@product.ImageUrl" alt="@product.Name" style="max-width: 100px;" />
                                    }
                                    else
                                    {
                                        <span>No image</span>
                                    }
                                </td>
                                <td>
                                    <form id="deleteForm_@product.Id" asp-action="DeleteProduct" asp-controller="Admins" method="post">
                                        @Html.AntiForgeryToken()
                                        <input type="hidden" name="id" value="@product.Id" />
                                        <button id="deleteButton_@product.Id" type="submit" class="btn btn-danger btn-sm">Delete</button>
                                    </form>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>No products available.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>
    <script>
        $(document).ready(function() {
            console.log("Page loaded at " + new Date().toLocaleString());
            $("#saveProductButton").on("click", function() {
                console.log("Save button clicked at " + new Date().toLocaleString());
                $("#addProductForm").submit();
            });
            $("#addProductForm").on("submit", function() {
                console.log("Add product form submitting to /Admins/AddProducts at " + new Date().toLocaleString());
            });
            $("[id^='deleteButton_']").on("click", function() {
                var productId = $(this).attr("id").replace("deleteButton_", "");
                console.log("Delete button clicked for product ID: " + productId + " at " + new Date().toLocaleString());
                $("#deleteForm_" + productId).submit();
            });
            $("[id^='deleteForm_']").on("submit", function() {
                var productId = $(this).find("input[name='id']").val();
                console.log("Delete form submitting for product ID: " + productId + " at " + new Date().toLocaleString());
            });
        });
    </script>
}