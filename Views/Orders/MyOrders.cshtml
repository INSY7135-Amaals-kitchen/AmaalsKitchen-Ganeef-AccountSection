@model List<AmaalsKitchen.Models.Order>
@{
    ViewData["Title"] = "My Orders - Amaals Kitchen";
}

<div class="orders-container">
    <div class="orders-header">
        <h1><i class="fas fa-clipboard-list me-2"></i>My Orders</h1>
        <p>Track your order history and status</p>
    </div>

    @if (Model.Any())
    {
        <div class="orders-list">
            @foreach (var order in Model)
            {
                <div class="order-card" data-order-id="@order.Id">
                    <div class="order-header">
                        <div class="order-info">
                            <h5>Order #@order.Id</h5>
                            <p class="order-date">
                                <i class="fas fa-calendar me-1"></i>@order.OrderDate.ToString("f")
                            </p>
                        </div>
                        <div class="order-status">
                            <span class="status-badge status-@order.Status.ToString().ToLower()">
                                @order.StatusDisplay
                            </span>
                        </div>
                    </div>

                    <!-- NEW: Order Status Timeline -->
                    <div class="order-timeline mb-3">
                        <div class="timeline-step @(order.Status >= OrderStatus.Pending ? "active" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-receipt"></i>
                            </div>
                            <div class="timeline-content">
                                <strong>Order Placed</strong>
                                <small>@order.OrderDate.ToString("hh:mm tt")</small>
                            </div>
                        </div>

                        <div class="timeline-connector @(order.Status >= OrderStatus.Preparing ? "active" : "")"></div>

                        <div class="timeline-step @(order.Status >= OrderStatus.Preparing ? "active" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-fire"></i>
                            </div>
                            <div class="timeline-content">
                                <strong>Preparing</strong>
                                @if (order.Status >= OrderStatus.Preparing)
                                {
                                    <small>In kitchen</small>
                                }
                            </div>
                        </div>

                        <div class="timeline-connector @(order.Status >= OrderStatus.ReadyForPickup ? "active" : "")"></div>

                        <div class="timeline-step @(order.Status >= OrderStatus.ReadyForPickup ? "active" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-check-circle"></i>
                            </div>
                            <div class="timeline-content">
                                <strong>Ready</strong>
                                @if (order.Status >= OrderStatus.ReadyForPickup)
                                {
                                    <small>Ready for pickup!</small>
                                }
                            </div>
                        </div>

                        <div class="timeline-connector @(order.Status >= OrderStatus.Completed ? "active" : "")"></div>

                        <div class="timeline-step @(order.Status >= OrderStatus.Completed ? "active" : "")">
                            <div class="timeline-icon">
                                <i class="fas fa-smile"></i>
                            </div>
                            <div class="timeline-content">
                                <strong>Completed</strong>
                                @if (order.ActualPickupTime.HasValue)
                                {
                                    <small>@order.ActualPickupTime.Value.ToString("hh:mm tt")</small>
                                }
                            </div>
                        </div>
                    </div>

                    <!-- NEW: Pickup Time Information -->
                    @if (order.Status != OrderStatus.Completed && order.Status != OrderStatus.Cancelled)
                    {
                        <div class="pickup-info alert @(order.IsReadyForPickup ? "alert-success" : "alert-warning")">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-clock fa-2x me-3"></i>
                                <div>
                                    @if (order.IsReadyForPickup)
                                    {
                                        <strong class="text-success">
                                            <i class="fas fa-check-circle me-1"></i>Your order is ready for pickup!
                                        </strong>
                                        <p class="mb-0">Please collect at your earliest convenience</p>
                                    }
                                    else
                                    {
                                        <strong>Estimated Pickup Time:</strong>
                                        <p class="mb-0">
                                            @order.EstimatedPickupTime.ToString("hh:mm tt")
                                            <span class="badge bg-warning text-dark ms-2">@order.TimeUntilPickup</span>
                                        </p>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Order Notes -->
                    @if (!string.IsNullOrEmpty(order.Notes))
                    {
                        <div class="order-notes mb-3">
                            <strong><i class="fas fa-sticky-note me-2"></i>Special Instructions:</strong>
                            <p class="mb-0 text-muted">@order.Notes</p>
                        </div>
                    }

                    <div class="order-details">
                        <div class="row">
                            <div class="col-md-6">
                                <p><strong>Items:</strong> @order.OrderItems.Sum(oi => oi.Quantity)</p>
                                <p><strong>Subtotal:</strong> R@(order.Subtotal.ToString("F2"))</p>
                            </div>
                            <div class="col-md-6">
                                <p><strong>Tax:</strong> R@(order.Tax.ToString("F2"))</p>
                                <p><strong>Total:</strong> R@(order.Total.ToString("F2"))</p>
                            </div>
                        </div>
                    </div>

                    <div class="order-items">
                        <h6>Order Items:</h6>
                        <div class="order-items-list">
                            @foreach (var item in order.OrderItems)
                            {
                                <div class="order-item">
                                    <div class="row align-items-center">
                                        <div class="col-2">
                                            <img src="@(item.ImageUrl ?? "/images/default-food.jpg")"
                                                 alt="@item.ItemName" class="order-item-image">
                                        </div>
                                        <div class="col-6">
                                            <span class="item-name">@item.ItemName</span>
                                        </div>
                                        <div class="col-2 text-center">
                                            <span class="item-quantity">x@(item.Quantity)</span>
                                        </div>
                                        <div class="col-2 text-end">
                                            <span class="item-price">R@((item.Price * item.Quantity).ToString("F2"))</span>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>

                    <!-- Action Buttons -->
                    <div class="order-actions mt-3">
                        <a asp-action="OrderDetails" asp-route-id="@order.Id" class="btn btn-sm btn-outline-primary">
                            <i class="fas fa-eye me-1"></i>View Details
                        </a>
                        @if (order.Status == OrderStatus.Pending)
                        {
                            <button class="btn btn-sm btn-outline-danger" onclick="cancelOrder(@order.Id)">
                                <i class="fas fa-times me-1"></i>Cancel Order
                            </button>
                        }
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <div class="empty-orders text-center py-5">
            <i class="fas fa-clipboard-list fa-5x text-muted mb-3"></i>
            <h3>No orders yet</h3>
            <p>You haven't placed any orders yet.</p>
            <a asp-controller="Home" asp-action="Menu" class="btn btn-amaals mt-3">
                <i class="fas fa-utensils me-2"></i>Start Shopping
            </a>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Auto-refresh order status every 30 seconds
        setInterval(function() {
            location.reload();
        }, 30000);

        function cancelOrder(orderId) {
            if (confirm('Are you sure you want to cancel this order?')) {
                $.post('/Orders/UpdateOrderStatus', {
                    orderId: orderId,
                    newStatus: 4 // Cancelled
                }, function(response) {
                    if (response.success) {
                        location.reload();
                    } else {
                        alert(response.message);
                    }
                });
            }
        }
    </script>
    }