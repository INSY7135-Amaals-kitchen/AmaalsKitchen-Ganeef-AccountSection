@model AmaalsKitchen.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <!-- Left Side - Forgot Password Form -->
    <div class="login-left">
        <div class="login-card">
            <!-- Logo -->
            <div class="login-logo">
                <div class="logo-img">
                    <img src="~/Images/amaals kitchen.jpg" alt="AK" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                </div>
                <h4>Amaals Kitchen</h4>
            </div>

            <!-- Forgot Password Form -->
            <form asp-action="ForgotPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="email" placeholder="name@example.com">
                    <label for="email">
                        <i class="fas fa-envelope me-2" style="color: var(--amaals-red);"></i>E-Mail
                    </label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Submit Button -->
                <button type="submit" class="login-btn mt-3">
                    <i class="fas fa-envelope-open-text me-2"></i>Send Reset Link
                </button>

                <!-- Links -->
                <div class="login-links mt-3">
                    <p class="mb-2">
                        <a asp-action="Login">Back to Login</a>
                    </p>
                    <p class="mb-0">
                        Don't have an account?
                        <a asp-action="Register" class="fw-bold">Sign Up</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Right Side - Branding -->
    <div class="login-right">
        <div class="login-right-bg"></div>
        <div class="login-right-content">
            <div class="login-right-logo">AK</div>
            <div class="login-right-since">SINCE 1991</div>
            <h2>Forgot Password?</h2>
            <p>Enter your email and we'll send you a reset link.</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
