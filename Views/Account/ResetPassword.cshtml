@model AmaalsKitchen.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <!-- Left Side - Reset Password Form -->
    <div class="login-left">
        <div class="login-card">
            <!-- Logo -->
            <div class="login-logo">
                <div class="logo-img">
                    <img src="~/Images/amaals kitchen.jpg" alt="AK" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                </div>
                <h4>Amaals Kitchen</h4>
            </div>

            <!-- Reset Password Form -->
            <form asp-action="ResetPassword" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="email" placeholder="Enter your email" />
                    <label for="email">
                        <i class="fas fa-envelope me-2" style="color: var(--amaals-red);"></i>Email
                    </label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- New Password -->
                <div class="form-floating">
                    <input asp-for="NewPassword" class="form-control" id="newPassword" type="password" placeholder="New Password" />
                    <label for="newPassword">
                        <i class="fas fa-lock me-2" style="color: var(--amaals-red);"></i>New Password
                    </label>
                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                </div>

                <!-- Confirm Password -->
                <div class="form-floating mb-4">
                    <input asp-for="ConfirmPassword" class="form-control" id="confirmPassword" type="password" placeholder="Confirm Password" />
                    <label for="confirmPassword">
                        <i class="fas fa-lock me-2" style="color: var(--amaals-red);"></i>Confirm Password
                    </label>
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>

                <!-- Reset Button -->
                <button type="submit" class="login-btn">
                    <i class="fas fa-sync-alt me-2"></i>Reset Password
                </button>

                <!-- Links -->
                <div class="login-links mt-3">
                    <p class="mb-0">
                        Remembered your password?
                        <a asp-action="Login" class="fw-bold">Back to Login</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Right Side - Logo and Branding -->
    <div class="login-right">
        <div class="login-right-bg"></div>
        <div class="login-right-content">
            <div class="login-right-logo">AK</div>
            <div class="login-right-since">SINCE 1991</div>
            <h2>Reset Your Password</h2>
            <p>Enter your email and choose a new password</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
