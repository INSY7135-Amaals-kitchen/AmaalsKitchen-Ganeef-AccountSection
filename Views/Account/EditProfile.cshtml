@model AmaalsKitchen.Models.EditProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="container my-5">
    <h2 class="mb-4">Edit Profile</h2>

    <div class="card p-4 shadow-sm rounded-3" style="max-width: 600px; margin:auto; background-color: var(--amaals-light-cream);">
        <!-- make controller explicit to avoid routing surprises -->
        <form id="editProfileForm" asp-controller="Account" asp-action="EditProfile" method="post">
            @Html.AntiForgeryToken()

            <!-- Hidden email (so form carries identity even if session disappears) -->
            <input asp-for="Email" type="hidden" />

            <!-- show model errors -->
            <div asp-validation-summary="All" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="FirstName" class="form-label fw-bold" style="color: var(--amaals-red);"></label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="LastName" class="form-label fw-bold" style="color: var(--amaals-red);"></label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PhoneNumber" class="form-label fw-bold" style="color: var(--amaals-red);"></label>
                <input asp-for="PhoneNumber" class="form-control" />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between mt-4">
               

                <div>
                    <a asp-action="Profile" class="btn btn-secondary me-2">
                        <i class="fas fa-times me-2"></i>Cancel
                    </a>

                    <!-- debug button - click if Save does nothing -->
                    <button id="debugSend" type="button" class="btn btn-outline-secondary">
                        Save 
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        // quick client-side diagnostics
        (function () {
            var form = document.getElementById('editProfileForm');
            if (form) {
                form.addEventListener('submit', function (ev) {
                    console.log('editProfileForm submit fired');
                    // let it continue — but if nothing happens check the network tab
                    // show a short timeout message if page doesn't navigate
                    setTimeout(function () {
                        console.log('If you are still on this page after 2s, check DevTools -> Network to see if the POST went out.');
                    }, 2000);
                }, false);
            }

            var debugButton = document.getElementById('debugSend');
            debugButton.addEventListener('click', async function () {
                try {
                    console.log('Debug AJAX button clicked');

                    // gather field values
                    var emailEl = document.querySelector('input[name="Email"]');
                    var firstEl = document.querySelector('input[name="FirstName"]');
                    var lastEl = document.querySelector('input[name="LastName"]');
                    var phoneEl = document.querySelector('input[name="PhoneNumber"]');

                    var data = {
                        Email: emailEl ? emailEl.value : '',
                        FirstName: firstEl ? firstEl.value : '',
                        LastName: lastEl ? lastEl.value : '',
                        PhoneNumber: phoneEl ? phoneEl.value : ''
                    };

                    console.log('Sending debug AJAX to server:', data);

                    var url = '@Url.Action("EditProfileAjax", "Account")';
                    var res = await fetch(url, {
                        method: 'POST',
                        headers: { 'Content-Type': 'application/json' },
                        body: JSON.stringify(data)
                    });

                    var txt = await res.text();
                    console.log('Debug AJAX response:', res.status, txt);

                    // Show message
                    alert('Details changed');

                    // Redirect to Profile page
                    window.location.href = '@Url.Action("Profile", "Account")';

                } catch (err) {
                    console.error('Debug AJAX error', err);
                    alert('Debug AJAX error: ' + err.message);
                }
            });
        })();
    </script>
}
