@model AmaalsKitchen.Models.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="login-container">
    <!-- Left Side - Login Form -->
    <div class="login-left">
        <div class="login-card">
            <!-- Logo -->
            <div class="login-logo">
                <div class="logo-img">
                    <img src="~/Images/amaals kitchen.jpg" alt="AK" style="width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                </div>
				<h4>Amaals Kitchen</h4>
            </div>

            <!-- Login Form -->
            <form asp-action="Login" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <!-- Email -->
                <div class="form-floating">
                    <input asp-for="Email" class="form-control" id="email" placeholder="name@example.com">
                    <label for="email">
                        <i class="fas fa-envelope me-2" style="color: var(--amaals-red);"></i>E-Mail
                    </label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <!-- Password -->
                <div class="form-floating">
                    <input asp-for="Password" class="form-control" id="password" placeholder="Password">
                    <label for="password">
                        <i class="fas fa-lock me-2" style="color: var(--amaals-red);"></i>Password
                    </label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <!-- Remember Me -->
                <div class="form-check mb-4">
                    <input asp-for="RememberMe" class="form-check-input" type="checkbox" id="rememberMe">
                    <label class="form-check-label" for="rememberMe">
                        Remember Me
                    </label>
                </div>

                <!-- Login Button -->
                <button type="submit" class="login-btn">
                    <i class="fas fa-sign-in-alt me-2"></i>Login
                </button>

                <!-- Links -->
                <div class="login-links">
                    <p class="mb-2">
                        <a asp-controller="Account" asp-action="ResetPassword">Forgot Password?</a>
                    </p>

                    <p class="mb-0">
                        Don't have an account?
                        <a asp-action="Register" class="fw-bold">Sign Up</a>
                    </p>
                </div>
            </form>
        </div>
    </div>

    <!-- Right Side - Logo and Branding -->
    <div class="login-right">
        <div class="login-right-bg"></div>
        <div class="login-right-content">
            <div class="login-right-logo">AK</div>
            <div class="login-right-since">SINCE 1991</div>
            <h2>Welcome Back!</h2>
            <p>Let's start ordering food now</p>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}