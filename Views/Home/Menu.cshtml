@{
    ViewData["Title"] = "Menu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Menu Header -->
<div class="menu-header">
    <div class="container">
        <h1><i class="fas fa-utensils me-3"></i>Menu</h1>
    </div>
</div>

<div class="container-fluid px-4">
    <!-- Category Tabs -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="category-tabs">
                <button class="category-btn active" data-category="all">
                    All Items
                </button>
                <button class="category-btn" data-category="rolls">
                    Menu 1/rolls
                </button>
                <button class="category-btn" data-category="burgers">
                    Menu 2/burgers
                </button>
                <button class="category-btn" data-category="drinks">
                    drinks
                </button>
            </div>
        </div>
    </div>

    <!-- Menu Items Grid -->
    <div class="row menu-container">
        <!-- Rolls Section -->
        <div class="col-lg-4 col-md-6 col-sm-12 mb-4 menu-item" data-category="rolls">
            <div class="card h-100 menu-item-card">
                <div class="card-img-container" style="height: 200px; overflow: hidden;">
                    <img src="~/images/Amaals-masala steak club.jpeg" class="card-img-top h-100 w-100"
                         style="object-fit: cover;" alt="Masala Steak Club">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="item-name">Masala steak club</h5>
                    <p class="item-description flex-grow-1">
                        Spicy masala steak with fresh ingredients
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div class="price-container">
                            <span class="h5 fw-bold">R36.00</span>
                            <small><s>R39.00</s></small>
                        </div>
                        <button class="btn btn-amaals" onclick="addToCart(1, 'Masala steak club', 36.00, '/images/Amaals-masala steak club.jpeg')">
                            <i class="fas fa-plus me-1"></i>Add
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12 mb-4 menu-item" data-category="rolls">
            <div class="card h-100 menu-item-card">
                <div class="card-img-container" style="height: 200px; overflow: hidden;">
                    <img src="~/images/Amaals-hotdog with chips.jpeg" class="card-img-top h-100 w-100"
                         style="object-fit: cover;" alt="Hot Dog">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="item-name">Hot dog</h5>
                    <p class="item-description flex-grow-1">
                        Classic hotdog with chips and sauce
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div class="price-container">
                            <span class="h5 fw-bold">R29.00</span>
                            <small><s>R32.00</s></small>
                        </div>
                        <button class="btn btn-amaals" onclick="addToCart(2, 'Hot dog', 29.00, '/images/Amaals-hotdog with chips.jpeg')">
                            <i class="fas fa-plus me-1"></i>Add
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-4 col-md-6 col-sm-12 mb-4 menu-item" data-category="rolls">
            <div class="card h-100 menu-item-card">
                <div class="card-img-container" style="height: 200px; overflow: hidden;">
                    <img src="~/images/Amaals-live.jpg" class="card-img-top h-100 w-100"
                         style="object-fit: cover;" alt="Gatsby Roll">
                </div>
                <div class="card-body d-flex flex-column">
                    <h5 class="item-name">Gatsby Roll</h5>
                    <p class="item-description flex-grow-1">
                        Traditional Cape Town gatsby with chips
                    </p>
                    <div class="d-flex justify-content-between align-items-center mt-auto">
                        <div class="price-container">
                            <span class="h5 fw-bold">R35.00</span>
                            <small><s>R38.00</s></small>
                        </div>
                        <button class="btn btn-amaals" onclick="addToCart(3, 'Gatsby Roll', 35.00, '/images/Amaals-live.jpg')">
                            <i class="fas fa-plus me-1"></i>Add
                        </button>
                    </div>
